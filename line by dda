Code:
#include<conio.h>
#include<graphics.h>
#include<stdio.h>
#include<math.h>
int main()
{
	int gd,gm;
	gd=DETECT;
	initgraph(&gd,&gm,"");
	int x1,y1,x2,y2,dx,dy;
	float x,y,xinc,yinc;
	float step;
	x1=150,y1=150,x2=370,y2=287;
	dx=abs(x2-x1);
	dy=abs(y2-y1);
	if(dx>dy)
		step=dx;
	else
		step=dy;
	xinc=dx/step;
	yinc=dy/step;
	x=x1;
	y=y1;
	putpixel(x,y,WHITE);
	for(int i=0;i<step;i++)
	{	x+=xinc;
		y+=yinc;
		putpixel(x,y,WHITE);
	}
	getch();
	closegraph();
	return 0;
}

