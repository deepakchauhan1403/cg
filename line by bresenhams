Code:
#include<graphics.h>
#include<conio.h>
#include<math.h>

int main()
{
int gd=DETECT;
int gm;
initgraph(&gd, &gm, "");
int x1=100,y1=200,x2=500,y2=300;
int dx=abs(x2-x1), dy=abs(y2-y1);
int x=x1, y=y1;
putpixel(x,y,WHITE);
if(dx > dy){
int ds=2*dy;
int dt=2*(dy-dx);
int d=2*dy-dx;
for(int i=0;i<dx;i++){
x++;
if(d<0){
d=d+ds;
}
else{
d=d+dt;
y++;
}
putpixel(x,y,RED);
printf("%d %d\n",x,y);
}
}
else{
int ds=2*dx;
int dt=2*(dx-dy);
int d=2*dx-dy;
for(int i=0;i<dy;i++)
{
y++;
if(d<0)
{
d=d+ds;
}
else
{
d=d+dt;
x++;
}
putpixel(x,y,RED);
printf("%d %d\n",x,y);
}
}
getch();
closegraph();
}

