#include <graphics.h>
#include <stdio.h>
#include <conio.h>
#include<math.h>
int main()
{
int gm, gd=DETECT;
int x,y,r,s;
initgraph(&gd,&gm,"C:\\TURBOC3\\BGI");
printf("\n enter the coordinates of circle :");
  scanf("%d %d",&x,&y);
printf("\n enter the radius of circle :");
  scanf("%d",&r);

circle(x,y,r);
printf("\n Enter the scalling factor: ");
scanf("%d",&s);
 circle(x,y,(r*s));
getch();
closegraph();
return 0;
}
