

Code: #include<conio.h>
#include<graphics.h>
int main()
{	int gd,gm;
	gd=DETECT;
	initgraph(&gd,&gm,"");
	int x,y,r;
	float sx,sy;
	printf("Program for scaling a circle-");
	printf("\nEnter the coordinates of a circle:");
	scanf("%d %d",&x,&y);
	printf("\nEnter the radius of a circle:");
	scanf("%d",&r);
	circle(x,y,r);
	outtextxy(x+20,y,"Original Circle");
	printf("\nEnter the scaling units:");
	scanf("%f %f",&sx,&sy);
	circle(x*sx,y*sx,r);
	outtextxy((x*sx),(y*sy),"Circle after Scaling");
	getch();
	return 0;
	closegraph();
}

