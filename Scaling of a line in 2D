
Code:
#include<conio.h>
#include<graphics.h>
int main()
{	int gd,gm;
	gd=DETECT;
	initgraph(&gd,&gm,"");
	float sx,sy;
	printf("Program for scaling a line-");
	printf("\nEnter the scaling units:");
	scanf("%f %f",&sx,&sy);
	line(120,200,200,150);
	outtextxy(150,150,"Original line");
	line(120*sx,200*sy,200*sx,150*sy);
	outtextxy((120*sx)+10,(200*sy),"Line after Scaling");
	getch();
	return 0;
	closegraph();
}

