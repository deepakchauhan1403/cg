#include<graphics.h>
#include<stdio.h>
#include<conio.h>
#include<math.h>
void dda ( int x1, int y1, int x2, int y2)
{
int dx=abs(x2-x1);int dy=abs(y2-y1);int step;
if(dx>=dy)
step=dx;
else
step=dy;
if(dx > 0)
dx=dx/step;
if(dy > 0)
dy=dy/step;
int x=x1;int y=y1;int i=1;
while(i<=step)
{
putpixel(x,y,6);
x=x+dx;y=y+dy;
i=i+1;
}
}
int main()
{
int x,y,x1,y1,x2,y2;
int gd=DETECT,gm;
initgraph(&gd,&gm,"c:\\MinGW\\lib\\libbgi.a");
cleardevice();
dda(10,10,100,10);
dda(100,10,100,100);
dda(10,100,100,100);
dda(10,10,10,100);
getch();
closegraph();
return 0;
}

