#include<stdio.h>
#include<conio.h>
#include<graphics.h>
#include<dos.h>

void coin()
{
while(!kbhit())
{
for(int i=20;i>=0;i--)
{
rectangle(100,180,300,150);
fillellipse(230,100,i,20);
setfillstyle(5,3);
line(150,70,100,150);
line(150,70,330,70);
line(330,70,300,150);
line(301,180,330,100);
line(330,100,330,70);
line(100,180,100,300);
line(100,300,120,300);
line(120,300,120,180);
line(300,150,300,300);
line(300,300,280,300);
line(280,300,280,180);
line(160,180,160,250);
line(160,250,180,250);
line(180,250,180,180);
line(330,100,330,250);
line(330,250,310,250);
line(310,250,310,155);
delay(500);
cleardevice();}
for(int j=0;j<=20;j++)
{           rectangle(100,180,300,150);
fillellipse(230,100,j,20);
setfillstyle(5,3);
line(150,70,100,150);
line(150,70,330,70);
line(330,70,300,150);
line(301,180,330,100);
line(330,100,330,70);
line(100,180,100,300);
line(100,300,120,300);
line(120,300,120,180);
line(300,150,300,190);
delay(500);
cleardevice();
}
}}

int main()
{
int gd,gm;
detectgraph(&gd,&gm);
initgraph(&gd,&gm,"");
coin();
getch();
closegraph();
return 0;
}
