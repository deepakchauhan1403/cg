#include<stdio.h>
#include<conio.h>
#include<graphics.h>
int main()
{
	int gd,gm;
	gd=DETECT;
	initgraph(&gd,&gm,"");
	int x1,y1,x2,y2,x3,y3,x4,y4,tx,ty;
	x1=50,y1=50,x2=50,y2=150,x3=150,y3=50,x4=150,y4=150;
	line(x1,y1,x2,y2);
	line(x1,y1,x3,y3);
	line(x3,y3,x4,y4);
	line(x2,y2,x4,y4);
	line(x1+20,y1+30,x2+20,y2+30);
	line(x1+20,y1+30,x3+20,y3+30);
	line(x3+20,y3+30,x4+20,y4+30);
	line(x2+20,y2+30,x4+20,y4+30);
	line(x1,y1,x1+20,y1+30);
	line(x2,y2,x2+20,y2+30);
	line(x3,y3,x3+20,y3+30);
	line(x4,y4,x4+20,y4+30);
	outtextxy(x1+130,y1+90,"Original Cube");
	printf("\nEnter the translational units::");
	scanf("%d %d",&tx,&ty);
	line(x1+tx,y1+ty,x2+tx,y2+ty);
	line(x1+tx,y1+ty,x3+tx,y3+ty);
	line(x3+tx,y3+ty,x4+tx,y4+ty);
	line(x2+tx,y2+ty,x4+tx,y4+ty);
	line(x1+20+tx,y1+30+ty,x2+20+tx,y2+30+ty);
	line(x1+20+tx,y1+30+ty,x3+20+tx,y3+30+ty);
	line(x3+20+tx,y3+30+ty,x4+20+tx,y4+30+ty);
	line(x2+20+tx,y2+30+ty,x4+20+tx,y4+30+ty);
	line(x1+tx,y1+ty,x1+20+tx,y1+30+ty);
	line(x2+tx,y2+ty,x2+20+tx,y2+30+ty);
	line(x3+tx,y3+ty,x3+20+tx,y3+30+ty);
	line(x4+tx,y4+ty,x4+20+tx,y4+30+ty);
	outtextxy(tx+200,ty+150,"Translated Cube");
	getch();
	return 0;
	closegraph();	
	
}
