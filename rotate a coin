#include<stdio.h>
#include<conio.h>
#include<graphics.h>
#include<dos.h>
void coin()
{ 
while(!kbhit())
{ 
for(int i=20;i>=0;i--)
{ 
 fillellipse(230,100,i,20);
 setfillstyle(5,3);
 delay(50);
 cleardevice();
}
for(int j=0;j<=20;j++)
{  
fillellipse(230,100,j,20);
setfillstyle(5,3);
delay(50);
cleardevice();
}
}}
int main()
{ 
 int gd, gm;
detectgraph(&gd,&gm);
initgraph(&gd,&gm,"");
coin();
getch();
closegraph();
return 0;
}
