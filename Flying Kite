#include<stdio.h>
#include<conio.h>
#include<graphics.h>
#include<dos.h>

void kite()
{
    while(!kbhit())
    {
        for(int i=1,j=1;i<=50,j<=50;i++,j++)
        {
            circle(20,200,20);
            line(20,220,20,280);
            line(20,280,5,300);
            line(20,280,35,300);
            line(20,260,5,240);
            line(20,260,35,240);
            line(300+i,10+j,250+i,100+j);
            line(300+i,10+j,350+i,100+j);
            line(250+i,100+j,300+i,200+j);
            line(350+i,100+j,300+i,200+j);
            line(300+i,10+j,300+i,200+j);
            line(300+i,200+j,280+i,220+j);
            line(300+i,200+j,320+i,220+j);
            line(280+i,220+j,320+i,220+j);
            arc(300+i,125+j,30,153,55);
            line(35,240,300+i,70+j);
            delay(30);
            cleardevice();
        }
        for(int i=50,j=50;i>=1,j>=1;i--,j--)
        {
            circle(20,200,20);
            line(20,220,20,280);
            line(20,280,5,300);
            line(20,280,35,300);
            line(20,260,5,240);
            line(20,260,35,240);
            line(300+i,10+j,250+i,100+j);
            line(300+i,10+j,350+i,100+j);
            line(250+i,100+j,300+i,200+j);
            line(350+i,100+j,300+i,200+j);
            line(300+i,10+j,300+i,200+j);
            line(300+i,200+j,280+i,220+j);
            line(300+i,200+j,320+i,220+j);
            line(280+i,220+j,320+i,220+j);
            arc(300+i,125+j,30,153,55);
            line(35,240,300+i,70+j);
            delay(30);
            cleardevice();
        }
    }
}

int main()
{
    int gd,gm;
    detectgraph(&gd,&gm);
    initgraph(&gd,&gm,"C:\\MinGW\\lib\\libbgi.a");
    kite();
    getch();
    closegraph();
    return 0;
}
